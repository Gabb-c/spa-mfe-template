{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "declarationDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["src/mfe-template.tsx"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.spec.tsx",
    "**/*.spec.jsx",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.test.tsx",
    "**/*.test.jsx",
    "src/__tests__/**/*"
  ]
}
